/* Add styling for the employee card here */
body {
      margin: 0;
      font-family: Arial, sans-serif;
}                                            

.slider-container {
    width: 100%;
    overflow: hidden;
}

.slider-wrapper {
    display: flex;
    transition: transform 0.5s ease-in-out;
}

.employee-card {
    flex: 0 0 100%;
    box-sizing: border-box;
    padding: 20px;
    text-align: center;
    background-color: #f5f5f5;
    border: 1px solid #ddd;
}

.image_slide img {
    max-width: 100px;
    border-radius: 10%;
}
