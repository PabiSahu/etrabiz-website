/* Individual employee card styles */
.employee-card {
            text-align: center;
            padding: 20px;
			border-color:black;
}

.employee-card img {
            max-width: 10%;
            border-radius: 50%; /* Make the image round */
			
}

.employee-card h2 {
            margin-top: 10px;
            font-size: 24px;
			color: teal;
}

.employee-card h5 {
            margin-top: 5px;
            color: teal;
}

.employee-card p {
           margin-top: 10px;
}

/* Navigation buttons styles */
.carousel-control-prev,
.carousel-control-next {
          width: 2%;
		  margin-left: 7%;
		  margin-right: 7%;
		  margin-top:2%;
}



.carousel-control-prev-icon,
.carousel-control-next-icon {
          filter: invert(100%); /* Invert the color to make it black */
}

/* Optionally, add hover effect to navigation buttons */
.carousel-control-prev:hover,
.carousel-control-next:hover {
          background-color: white;
}

/*------current openings-------*/

.job-container {
          display: flex;
          flex-wrap: wrap;
          justify-content: space-around;
          background-color: AliceBlue;
}

.job-card {
          
          margin: 10px;
          padding: 30px;
          text-align: center;
          border-left: 5px solid yellow;
          position: relative; /* Added position relative */
          background-color:white;
}

.button {
          background-color: yellow;
          color: black;
          padding: 5px 10px;
          border: none;
          cursor: pointer;
          font-weight: bold;
          display: none; /* Hide initially */
          position: absolute; /* Added absolute positioning */
          bottom: 10px; /* Adjust as needed */
          left: 50%;
          transform: translateX(-50%);
}

.job-card:hover .button {
          display: block; /* Show on hover */
}

